---
import "@fontsource/outfit";
import "@fontsource/inter";
import "../styles/global.css";
import WhatsAppWidget from "../components/WhatsAppWidget.astro";
import ScrollToTop from "../components/ScrollToTop.astro";
import { ViewTransitions } from "astro:transitions";

interface Props {
  title: string;
  description?: string;
}

const {
  title,
  description = "Centro de Descanso Los Poetas - Hotel Boutique en El Quisco. Cabañas de alto estándar, descanso profundo y conexión con la naturaleza.",
} = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- Preconnect for faster resource loading -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://wa.me" />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="hotel boutique El Quisco, cabañas El Quisco, arriendo cabañas, descanso litoral central, hotel accesible Chile, cabañas con WiFi, hospedaje El Quisco, turismo Quinta Región"
    />
    <meta name="author" content="Centro de Descanso Los Poetas" />
    <meta
      name="robots"
      content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1"
    />
    <link rel="canonical" href="https://cdelospoetas.cl" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://cdelospoetas.cl" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://cdelospoetas.cl/logo.webp" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:locale" content="es_CL" />
    <meta property="og:site_name" content="Centro de Descanso Los Poetas" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://cdelospoetas.cl" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta
      property="twitter:image"
      content="https://cdelospoetas.cl/logo.webp"
    />

    <!-- LLM-Friendly Metadata -->
    <meta
      name="ai:context"
      content="Centro de Descanso Los Poetas es un hotel boutique en El Quisco, Chile, especializado en descanso profundo y accesibilidad universal. Ofrece cabañas independientes con WiFi, cocina equipada, y diseño inclusivo para personas con movilidad reducida."
    />
    <meta
      name="ai:purpose"
      content="Reservas y consultas sobre alojamiento en cabañas boutique en El Quisco, Quinta Región, Chile"
    />
    <meta name="ai:contact" content="WhatsApp: +56 9 5229 9793" />

    <!-- Favicon -->
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <link rel="apple-touch-icon" href="/logo.webp" />

    <!-- JSON-LD Schema -->
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Hotel",
        name: "Centro de Descanso Los Poetas",
        description: description,
        url: "https://cdelospoetas.cl",
        telephone: "+56952299793",
        address: {
          "@type": "PostalAddress",
          addressLocality: "El Quisco",
          addressRegion: "Valparaíso",
          addressCountry: "CL",
        },
        geo: {
          "@type": "GeoCoordinates",
          latitude: "-33.3947",
          longitude: "-71.6897",
        },
        priceRange: "$$",
        amenityFeature: [
          { "@type": "LocationFeatureSpecification", name: "WiFi gratuito" },
          {
            "@type": "LocationFeatureSpecification",
            name: "Accesibilidad para sillas de ruedas",
          },
          { "@type": "LocationFeatureSpecification", name: "Cocina equipada" },
          { "@type": "LocationFeatureSpecification", name: "Estacionamiento" },
        ],
        starRating: {
          "@type": "Rating",
          ratingValue: "4",
        },
        image: "https://cdelospoetas.cl/logo.webp",
        sameAs: ["https://www.instagram.com/cdelospoetas"],
      })}
    />

    <ViewTransitions />
  </head>
  <body
    class="font-inter bg-slate-50 text-slate-800 antialiased overflow-x-hidden"
  >
    <slot />
    <WhatsAppWidget />
    <ScrollToTop />
  </body>
</html>

<style is:global>
  /* Custom Scrollbar */
  ::-webkit-scrollbar {
    width: 10px;
  }
  ::-webkit-scrollbar-track {
    background: #f1f5f9;
  }
  ::-webkit-scrollbar-thumb {
    background: #cbd5e1;
    border-radius: 5px;
  }
  ::-webkit-scrollbar-thumb:hover {
    background: #94a3b8;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Outfit", sans-serif;
  }
</style>
