<section id="politicas" class="py-20 bg-white border-t border-slate-100">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-serif text-slate-800 mb-2">
          Estancia Responsable
        </h2>
        <p class="text-slate-600">
          Políticas diseñadas para garantizar la paz de todos nuestros
          huéspedes.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- Check In/Out -->
        <div class="bg-slate-50 p-8 rounded-2xl border border-slate-100">
          <div class="flex items-center gap-4 mb-4">
            <div class="p-3 bg-white rounded-full shadow-sm text-emerald-600">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-slate-800">Horarios</h3>
          </div>
          <ul class="space-y-3 text-slate-600">
            <li class="flex justify-between border-b border-slate-200 pb-2">
              <span>Check-in</span>
              <span class="font-medium text-slate-800">15:00 hrs</span>
            </li>
            <li class="flex justify-between pt-2">
              <span>Check-out</span>
              <span class="font-medium text-slate-800">11:00 hrs</span>
            </li>
          </ul>
          <p class="text-xs text-slate-500 mt-4 italic">
            *Early check-in / Late check-out sujeto a disponibilidad.
          </p>
        </div>

        <!-- Rules -->
        <div class="bg-slate-50 p-8 rounded-2xl border border-slate-100">
          <div class="flex items-center gap-4 mb-4">
            <div class="p-3 bg-white rounded-full shadow-sm text-rose-500">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-6 w-6"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"
                ></path>
              </svg>
            </div>
            <h3 class="text-xl font-semibold text-slate-800">Restricciones</h3>
          </div>
          <ul class="space-y-3 text-slate-600">
            <li class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 bg-rose-400 rounded-full"></span>
              <span>No se aceptan mascotas</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 bg-rose-400 rounded-full"></span>
              <span>Prohibido fumar en interiores</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 bg-rose-400 rounded-full"></span>
              <span>Prohibido asados (por respeto al descanso)</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="w-1.5 h-1.5 bg-rose-400 rounded-full"></span>
              <span>Silencio en zonas comunes</span>
            </li>
          </ul>
        </div>
      </div>

      <div class="mt-8 text-center">
        <div
          class="inline-flex items-center gap-2 px-6 py-3 bg-emerald-50 text-emerald-700 rounded-full text-sm"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <span>Espacio 100% Inclusivo y Accesible</span>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Section title animation
  gsap.from("#politicas .text-center", {
    y: 40,
    opacity: 0,
    duration: 0.8,
    scrollTrigger: {
      trigger: "#politicas",
      start: "top 80%",
      toggleActions: "play none none reverse",
    },
  });

  // Policy cards stagger animation
  gsap.from("#politicas .grid > div", {
    y: 50,
    opacity: 0,
    stagger: 0.2,
    duration: 0.8,
    ease: "power2.out",
    scrollTrigger: {
      trigger: "#politicas .grid",
      start: "top 80%",
      toggleActions: "play none none reverse",
    },
  });

  // Bottom badge animation
  gsap.from("#politicas .mt-8", {
    y: 30,
    opacity: 0,
    duration: 0.8,
    scrollTrigger: {
      trigger: "#politicas .mt-8",
      start: "top 90%",
      toggleActions: "play none none reverse",
    },
  });
</script>
