<button
  id="scroll-to-top"
  aria-label="Volver al inicio"
  class="fixed bottom-6 left-6 z-50 p-3 bg-slate-800 text-white rounded-full shadow-lg opacity-0 translate-y-10 transition-all duration-300 hover:bg-slate-700 hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-slate-800 pointer-events-none data-[visible=true]:opacity-100 data-[visible=true]:translate-y-0 data-[visible=true]:pointer-events-auto"
>
  <svg
    xmlns="http://www.w3.org/2000/svg"
    class="h-6 w-6"
    fill="none"
    viewBox="0 0 24 24"
    stroke="currentColor"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      stroke-width="2"
      d="M5 10l7-7m0 0l7 7m-7-7v18"></path>
  </svg>
</button>

<script>
  const scrollBtn = document.getElementById("scroll-to-top");

  if (scrollBtn) {
    // Show/Hide button based on scroll position
    window.addEventListener("scroll", () => {
      if (window.scrollY > 300) {
        scrollBtn.setAttribute("data-visible", "true");
      } else {
        scrollBtn.setAttribute("data-visible", "false");
      }
    });

    // Scroll to top action
    scrollBtn.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
  }
</script>
